<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <description>HTML5 Remote Control for Arduino based 2WD Wheel Robot</description>
    <display-name>WebRC</display-name>

    <servlet>
        <servlet-name>RcServlet</servlet-name>
        <servlet-class>net.ant.rc.web.RcServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RcServlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>net.ant.rc.web.WebRCContextHolder</listener-class>
    </listener>
</web-app>
